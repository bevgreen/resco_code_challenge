<div class="min-h-screen bg-gray-50 p-8">
  <div class="w-full px-8">
<header class="flex justify-between items-center mb-8">
  <h1 class="text-3xl font-bold text-gray-800">Items List</h1>
  <%= link_to "+ New Item", new_item_path, 
        class: "bg-green-600 text-blue font-semibold px-6 py-3 rounded-lg hover:bg-green-700 shadow-md transition" %>
  </header>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 justify-center">
      <% @items.each do |item| %>
        <div class="bg-white border border-gray-200 rounded-xl shadow hover:shadow-lg transition p-6">
          <% if item['image'].present? %>
            <div class="mb-4 flex justify-center">
        <div class="w-[200px] h-[200px] overflow-hidden rounded-md shadow-sm">
          <img src="<%= item['image'] %>" 
              alt="<%= item['name'] %>" 
              class="w-full h-full object-cover">
        </div>
      </div>
          <% end %>

          <h2 class="text-xl font-semibold text-gray-800 mb-2"><%= item['name'] %></h2>
          <p class="text-gray-600 mb-4"><%= item['description'] || 'No description available.' %></p>
          
          <a href="<%= item_path(item['id']) %>"
             class="inline-block bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition">
            View Details
          </a>
        </div>
      <% end %>
    </div>
  </div>
</div>
