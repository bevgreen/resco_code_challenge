<div class="max-w-xl mx-auto bg-white shadow-lg rounded-2xl p-6">
  <% if @item['image'].present? %>
    <img 
      src="<%= @item['image'] %>" 
      alt="<%= @item['name'] %>" 
      class="rounded-lg w-full h-64 object-cover mb-4"
    />
  <% end %>

  <h1 class="text-3xl font-bold text-gray-800 mb-2"><%= @item['name'] %></h1>

  <div class="text-gray-700 space-y-2">
    <p><span class="font-semibold">Description:</span> <%= @item['description'] %></p>
    <p><span class="font-semibold">Number:</span> <%= @item['number'] %></p>
    <p><span class="font-semibold">Status:</span> <%= @item['status'] %></p>
  </div>

  <div class="mt-6">
    <%= link_to "â† Back to Items List", items_path, class: "text-blue-600 hover:underline" %>
  </div>
</div>
