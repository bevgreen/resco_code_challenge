<div class="min-h-screen bg-gray-50 p-8">
  <div class="max-w-6xl mx-auto">

    <!-- Header with Home button -->
    <header class="flex justify-between items-center mb-8">
      <h1 class="text-3xl font-bold text-gray-800">+ New Item</h1>
      <%= link_to "Home", root_path, 
            class: "bg-green-600 text-black font-semibold px-9 py-4 rounded-lg hover:bg-green-700 shadow-md transition" %>
    </header>

    <!-- Success / Error flash messages -->
    <% if flash[:notice] %>
      <div class="mb-6 p-4 bg-green-100 text-green-800 border border-green-200 rounded shadow">
        <%= flash[:notice] %>
      </div>
    <% elsif flash[:alert] %>
      <div class="mb-6 p-4 bg-red-100 text-red-800 border border-red-200 rounded shadow">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <!-- Form card -->
    <div class="bg-white border border-gray-200 rounded-xl shadow-md p-6">
      <%= form_with url: items_path, method: :post, local: true, scope: :item do |f| %>

        <div class="mb-4">
          <%= f.label :name, class: "block mb-1 font-semibold" %>
          <%= f.text_field :name, class: "border p-2 rounded w-full" %>
        </div>

        <div class="mb-4">
          <%= f.label :description, class: "block mb-1 font-semibold" %>
          <%= f.text_field :description, class: "border p-2 rounded w-full" %>
        </div>

        <div class="mb-4">
          <%= f.label :status, class: "block mb-1 font-semibold" %>
          <%= f.select :status, 
                options_for_select(["Available", "Decommissioned", "Expired"]), 
                {}, 
                class: "border p-2 rounded w-full bg-white" %>
        </div>

        <div class="mb-4">
          <%= f.label :image, class: "block mb-1 font-semibold" %>
          <%= f.text_field :image, class: "border p-2 rounded w-full" %>
        </div>

        <%= f.submit "+ Add Item", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 shadow-md transition" %>
      <% end %>
    </div>
  </div>
</div>
